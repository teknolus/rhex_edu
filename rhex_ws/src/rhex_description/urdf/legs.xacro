<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="leg" params="prefix x_offset y_offset">
        <link name="${prefix}_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                <mesh filename="file://$(find rhex_description)/meshes/rpk10_leg.dae"/>
                </geometry>
                <material name="Gray"/>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="file://$(find rhex_description)/meshes/rpk10_leg.dae"/>
                </geometry>
            </collision>

            <xacro:box_inertia mass="0.05" width="0.0979" height="0.1744" length="0.0315">
                <origin xyz="0 0 -0.08" rpy="0 0 0"/>
            </xacro:box_inertia>
        </link>

        <joint name="${prefix}_joint" type="continuous">
            <axis xyz="0 1 0"/>
            <parent link="base_link"/>
            <child link="${prefix}_link"/>
            <origin xyz="${x_offset} ${y_offset} 0" rpy="0 0 0"/>
            <dynamics damping="0.5" friction="0.0"/>
            <!-- <limit effort="100" velocity="100"/> -->
        </joint>

        <gazebo reference="${prefix}_link">
            <kp>1000000000000.0</kp>
            <kd>100.0</kd>
            <mu1>50</mu1>
            <mu2>50</mu2>
            <minDepth>0.05</minDepth>
        </gazebo>

        <!-- <ros2_control name="${prefix}" type="system">
            <hardware>
                <plugin>gazebo_ros2_control/GazeboSystem</plugin>
            </hardware>
            <joint name="${prefix}_joint">
                <command_interface name="effort"/>
                <state_interface name="effort"/>
                <state_interface name="position">
                    <param name="initial_value">-1.9</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
        </ros2_control> -->
    </xacro:macro>

</robot>
